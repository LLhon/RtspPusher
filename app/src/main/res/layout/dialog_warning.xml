<?xml version="1.0" encoding="utf-8"?>
<com.allen.library.shape.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="@dimen/dp_330"
  android:layout_height="@dimen/dp_180"
  android:padding="@dimen/dp_20"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  app:shapeSolidColor="@color/colorPrimary"
  app:shapeStrokeWidth="@dimen/dp_1"
  app:shapeStrokeColor="@color/divider_line"
  android:layout_gravity="center">

  <ImageView
    android:id="@+id/ivHelp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_warn"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <TextView
    android:id="@+id/tvSure"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    app:layout_constraintTop_toTopOf="@id/ivHelp"
    app:layout_constraintStart_toEndOf="@id/ivHelp"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/white"
    android:text="提示"/>

  <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    app:layout_constraintTop_toBottomOf="@id/tvSure"
    app:layout_constraintStart_toEndOf="@id/ivHelp"
    app:layout_constraintEnd_toEndOf="parent"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/white"
    android:text="IP通道地址或管理端口或设备通道号已被使用，设置IP通道失败!"/>

  <com.allen.library.shape.ShapeTextView
    android:id="@+id/tvCancel"
    android:layout_width="@dimen/dp_70"
    android:layout_height="@dimen/dp_25"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/white"
    android:text="关闭"
    android:gravity="center"
    app:shapeSolidColor="@color/D3D3D3"
    app:shapeStrokeWidth="1dp"
    app:shapeStrokeColor="@color/divider_line"/>

</com.allen.library.shape.ShapeConstraintLayout>