<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="@dimen/dp_330"
  android:layout_height="@dimen/dp_180"
  android:padding="@dimen/dp_20"
  android:background="@color/FF3F51B5"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_gravity="center">

  <ImageView
    android:id="@+id/ivHelp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_help"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <TextView
    android:id="@+id/tvSure"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    app:layout_constraintTop_toTopOf="@id/ivHelp"
    app:layout_constraintStart_toEndOf="@id/ivHelp"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/white"
    android:text="确认"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    app:layout_constraintTop_toBottomOf="@id/tvSure"
    app:layout_constraintStart_toEndOf="@id/ivHelp"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/white"
    android:text="确定要删除该IP通道吗?"/>

  <com.allen.library.shape.ShapeTextView
    android:id="@+id/tvCancel"
    android:layout_width="@dimen/dp_70"
    android:layout_height="@dimen/dp_25"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/white"
    android:text="取消"
    android:gravity="center"
    app:shapeStrokeWidth="1dp"
    app:shapeStrokeColor="@color/divider_line"/>

  <com.allen.library.shape.ShapeTextView
    android:id="@+id/tvOk"
    android:layout_width="@dimen/dp_70"
    android:layout_height="@dimen/dp_25"
    android:layout_marginEnd="@dimen/dp_10"
    app:layout_constraintEnd_toStartOf="@id/tvCancel"
    app:layout_constraintTop_toTopOf="@id/tvCancel"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/white"
    android:text="确定"
    android:gravity="center"
    app:shapeSolidColor="@color/FF03A9F4"/>

</androidx.constraintlayout.widget.ConstraintLayout>