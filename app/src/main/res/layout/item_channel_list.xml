<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="@dimen/dp_30"
  android:paddingStart="@dimen/dp_10"
  android:background="@color/colorPrimaryVariant"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/tvChannelNo"
    android:layout_width="@dimen/dp_70"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    tools:text="D1"/>

  <TextView
    android:id="@+id/tvIp"
    android:layout_width="@dimen/dp_120"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    tools:text="192.168.6.223"/>

  <TextView
    android:id="@+id/tvChannelName"
    android:layout_width="@dimen/dp_150"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    tools:text="Camera 01"/>

  <FrameLayout
    android:id="@+id/flStatus"
    android:layout_width="@dimen/dp_70"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    >

    <ImageView
      android:id="@+id/ivStatus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:src="@drawable/ic_online"/>

  </FrameLayout>

  <TextView
    android:id="@+id/tvPush"
    android:layout_width="@dimen/dp_70"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/FF9800"
    android:text="开始推流"/>

  <TextView
    android:id="@+id/tvProtocolName"
    android:layout_width="@dimen/dp_150"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    tools:text="ONVIF(未知品牌)"/>

  <LinearLayout
    android:id="@+id/llOperation"
    android:layout_width="@dimen/dp_100"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/ivEdit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_edit"/>

    <ImageView
      android:id="@+id/ivDel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dp_20"
      android:src="@drawable/ic_delete"/>

  </LinearLayout>

  <TextView
    android:id="@+id/tvDeviceType"
    android:layout_width="@dimen/dp_150"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    tools:text="设备类型"/>

  <TextView
    android:id="@+id/tvSerialNo"
    android:layout_width="@dimen/dp_300"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    tools:text="序列号"/>

  <TextView
    android:id="@+id/tvPort"
    android:layout_width="@dimen/dp_100"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    tools:text="管理端口"/>

  <TextView
    android:id="@+id/tvFirmware"
    android:layout_width="@dimen/dp_300"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_5"
    android:gravity="start|center_vertical"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    tools:text="固件版本"/>

</LinearLayout>